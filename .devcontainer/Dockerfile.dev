FROM oven/bun:1.3.9-debian

WORKDIR /workspace

RUN apt-get update && export DEBIAN_FRONTEND=noninteractive \
    && apt-get -y install --no-install-recommends \
    git \
    ca-certificates \
    curl \
    wget \
    bash \
    && apt-get clean -y && rm -rf /var/lib/apt/lists/*

RUN if ! getent group 1000 >/dev/null 2>&1; then groupadd --gid 1000 devuser; \
    elif [ "$(getent group 1000 | cut -d: -f1)" != "devuser" ]; then groupmod -n devuser $(getent group 1000 | cut -d: -f1); fi \
    && if ! id -u 1000 >/dev/null 2>&1; then useradd --uid 1000 --gid 1000 --shell /bin/bash --create-home devuser; \
    elif [ "$(id -un 1000)" != "devuser" ]; then usermod -l devuser -d /home/devuser -m -s /bin/bash $(id -un 1000); fi

USER devuser

CMD ["sleep", "infinity"]
